@model SubscribeViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/styles/websub.css" />
    <title>Demo.AspNetCore.WebSub</title>
</head>
<body>
    <form id="subscribe-form" asp-action="Subscribe">
        <fieldset>
            <legend>Subcribe for content</legend>
            <label asp-for="Url"></label>
            <input asp-for="Url" size="64" />
            <br /><br />
            <label asp-for="Secret"></label>
            <input asp-for="Secret" size="61" />
            <br /><br />
            <input id="subscribe-submit" type="submit" value="Subscribe" />
        </fieldset>
    </form>
    <hr />
    <div id="dashboard-console">
        <label>Log:</label>
        <div id="output"></div>
        <button id="clear" style="position: relative; top: 3px;">Clear</button>
    </div>
    <script src="~/scripts/websub-subscriber.js" asp-append-version="true"></script>
</body>
</html>
